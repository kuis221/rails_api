  bootbox.classes('modal-large');
  var selectAreaDialog = bootbox.dialog($('#{escape_javascript(render "select_areas")}'), [
    {
      "label" : 'New Area',
      "class" : "btn btn-primary",
      "callback": function() {
          selectAreaDialog.off('hidden'); // To prevent the div to be removed in case the user returns to the form
          selectAreaDialog.modal('hide');
          $.ajax('#{new_place_area_path(resource.place, format: :js)}');
      }
    },
    {
      "label" : "Cancel",
      "class" : "btn btn btn-cancel",
      "callback": function() {
          selectAreaDialog.modal('hide');
      }
    }
  ],{header: 'Add to Area', 'onEscape': true, animate: (!$.fx.off)})
