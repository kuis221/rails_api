.select-list-table-wrapper
  .link-list
    ul.select-items-list
      - @areas.each do |area|
        li id="area-#{area.id}"
          span.pull-left
            .area_name= area.name
            .area_description= area.description
          span.pull-right
            = link_to '', add_area_venue_path(resource, area_id: area.id), remote: true, method: :post, data: {disable_with: '...'}, class: 'add' if area.active?