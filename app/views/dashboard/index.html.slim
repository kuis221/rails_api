- if can? :upcomings_events_module, :dashboard
  = render 'dashboard/modules/upcoming_events'

- if can? :campaign_overview, :dashboard
  = render 'dashboard/modules/campaign_overview'

- if can? :incomplete_tasks_module, :dashboard
  = render 'dashboard/modules/incomplete_tasks'

- if can? :venue_performance_module, :dashboard
  = render 'dashboard/modules/venue_performance'

- if can? :recent_photos_module, :dashboard
  = render 'dashboard/modules/recent_photos'

- if can? :recent_comments_module, :dashboard
