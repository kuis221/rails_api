li id="event_#{event.id}" class="#{event.aasm_state}"
  span.event-item
    a href="#{event_path(event)}"
      span.date= format_date_range(event.start_at, event.end_at)
      span.address
        =
        b= event.campaign_name
        br>/
        = place_address(event.place)
    span.pull-right
      = link_to '', edit_event_path(event), remote: true, class: 'edit', title: 'Edit'
      = link_to '', deactivate_event_path(event), remote: true, class: 'disable', title: 'Deactivate' if event.active?
      = link_to '', activate_event_path(event), remote: true, class: 'enable', title: 'Activate' unless event.active?