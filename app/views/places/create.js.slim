- render 'settings'
- if resource.errors.any?
  = render 'form_dialog'
- else
  |
    $('.bootbox.modal').modal('hide');
  - if parent.present?
    |
      $('##{parent.class.name.underscore}-places-list').html('#{escape_javascript(render partial: "#{parent.class.name.pluralize.underscore}/places", locals: {resource: parent, places: parent.places})}');
  - if @from_new_place_form
    - if parent.is_a?(Campaign)
      |
        $.get('#{new_campaign_placeable_path(parent, format: :js)}');
    - elsif parent.nil?
      |
        window.location = "#{venue_path(@venue.id)}"
    - else
      |
        bootbox.dialog(
          $('#{escape_javascript(render "form")}'),
          [],
          {'onEscape': true, animate: (!$.fx.off), header: 'Add place'}
        );