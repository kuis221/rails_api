doctype xml

Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet" xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  Styles
    Style ss:ID="s1"
      Font ss:Bold="1"
    Style ss:ID="s2"
      NumberFormat ss:Format="mm/dd/yy hh:mm AM/PM"
  Worksheet ss:Name="Visits"

    Table
      Column ss:Width="150"
      Column ss:Width="100"
      Column ss:Width="100"
      Column ss:Width="150"
      Row ss:StyleID="s1"
        Cell
          Data ss:Type="String" NAME
        Cell
          Data ss:Type="String" START DATE
        Cell
          Data ss:Type="String" END DATE
        Cell
          Data ss:Type="String" EMPLOYEE

      - each_collection_item do |visit|
        Row
          Cell
            Data ss:Type="String"= visit.name
          Cell ss:StyleID="s2"
            Data ss:Type="DateTime"= Timeliness.parse(event_date(visit, :start_date).strftime('%Y-%m-%d %H:%M:%S'), zone: 'UTC').strftime('%FT%R')
          Cell ss:StyleID="s2"
            Data ss:Type="DateTime"= Timeliness.parse(event_date(visit, :end_date).strftime('%Y-%m-%d %H:%M:%S'), zone: 'UTC').strftime('%FT%R')
          Cell
            Data ss:Type="String"= visit.company_user.full_name

